{% extends 'base.html.twig' %}

{% block body_id 'login' %}

{% block main %}
	{% if error %}
		<div class="alert alert-danger">
			{{ }}
		</div>
	{% endif %}
	
	<div class="row">
		<div class="col-sm-5">
			<div class="well">
				<form action="{{ path('security_login_check') }}" method="post">
					<fieldset>
						<legend><i class="fa fa-lock"></i>Security Login</legend>
						<div class="form-group">
							<label for="username">Username<label>
							<input type="text" id="username" name="_username" class="form-control"/>
						</div>
						<div class="form-group">
							<label for="password">Password</label>
							<input type="password" id="password" name="_password" class="form-control" />
						</div>	
						<input type="hidden" name="_csrf_token" value="{{ csrrf_token('authenticate') }}" />
						<button type="submit" class="btn btn-primary"><i class="fa fa-sign-in"></i>Login</button>
					</fieldset>
				</form>
			</div>
		</div>
	</div>
	
{% endblock %}