{% extends 'superadmin/layout.html.twig' %}

{% block body_id 'super_admin_post_index' %}

{% block main %}
    <h1>POST LIST</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th> Title </th>
                <th><i class="fa fa-user"></i> Author </th>
                <th><i class="fa fa-calendar"></i> Published At </th>
                <th><i class="fa fa-cogs"></i> Actions </th>
            </tr>
        </thead>
        <tbody>
        {% for post in posts %}
            <tr>
                <td>{{ post.title }}</td>
                <td>{{ post.authorEmail }}</td>
                <td>{% if post.publishedAt %}{{ post.publishedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    <div class="item-actions">
                        <a href="{{ path('super_admin_post_show', { id: post.id }) }}" class="btn btn-sm btn-default">
                            Show 
                        </a>
						
                        {# if post.isAuthor(app.user) #}
                            <a href="{{ path('super_admin_post_edit', { id: post.id }) }}" class="btn btn-sm btn-primary">
                                <i class="fa fa-edit"></i> Edit
                            </a>
                        {# endif #}
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4" align="center">No posts found</td>
           </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

{% block sidebar %}
    <div class="section actions">
        <a href="{{ path('super_admin_post_new') }}" class="btn btn-lg btn-block btn-success">
            <i class="fa fa-plus"></i> CREATE POST
        </a>
		<a href="{{ path('super_admin_news_index') }}" class="btn btn-lg btn-block btn-success">
            HOT NEWS IN THE WORLD
        </a>
    </div>
{% endblock %}